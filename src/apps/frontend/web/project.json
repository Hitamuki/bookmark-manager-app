{
  "name": "web",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "root": "src/apps/frontend/web",
  "sourceRoot": "src/apps/frontend/web",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project web --web",
  "targets": {
    "lint:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": ["biome lint . \"**/*.{ts,tsx,js,jsx}\"", "markuplint .", "stylelint .", "textlint ."],
        "cwd": "."
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": [
          "biome check --write . \"**/*.{ts,tsx,js,jsx}\"",
          "markuplint . --fix",
          "stylelint . --fix",
          "textlint . --fix"
        ]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format . --write"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format . --check"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config src/vitest.config.nextjs.ts"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config src/vitest.config.nextjs.ts"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --config src/apps/frontend/web/playwright.config.ts"
      }
    }
  }
}
