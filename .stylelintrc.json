{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-recess-order"],
  "ignoreFiles": ["**/node_modules/**", "**/dist/**"],
  "overrides": [
    {
      "files": ["**/*.html"],
      "customSyntax": "postcss-html"
    },
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "no-empty-source": null,
    "max-nesting-depth": 3,
    "color-no-invalid-hex": true
  }
}
