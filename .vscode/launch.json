{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Next.js (web)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["nx", "dev", "web"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug NestJS (api-core)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/src/apps/web-api/core/main.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/src/apps/web-api/core/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Next.js",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to NestJS",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Both Apps",
      "configurations": ["Debug Next.js (web)", "Debug NestJS (api-core)"],
      "stopAll": true
    }
  ]
}
