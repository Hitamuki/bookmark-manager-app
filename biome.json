{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": [],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/api-client/**",
      "docs/**",
      ".nx/**",
      ".vscode/**",
      "**/*.{md,html,scss,yml,yaml,toml}"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {},
  "linter": {
    "enabled": true,
    "ignore": [],
    "rules": {
      "recommended": true,
      "a11y": {},
      "complexity": {},
      "correctness": {},
      "nursery": {},
      "performance": {},
      "security": {},
      "style": {},
      "suspicious": {}
    }
  }
}
